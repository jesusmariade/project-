---
import ProductCard from "../components/ProductCard.astro";
import { productos } from "../data/productos";
---

<section class="featured-showcase">
  <div class="container">
    <div class="header-minimal">
      <span class="eyebrow">Exclusividad Industrial</span>
      <h2 class="title-main">Piezas de <span class="serif-italic">Ingeniería</span></h2>
      <div class="accent-line"></div>
      <p class="description-text">
        Una selección curada de nuestras soluciones más sofisticadas en acero inoxidable.
      </p>
    </div>
    
    <div class="products-grid">
      {productos.slice(0, 4).map((producto) => (
        <ProductCard producto={producto} />
      ))}
    </div>
    
    <div class="footer-actions">
      <a href="/productos" class="btn-boutique">
        <span>Explorar toda la colección</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  :root {
    --brand-red: #a4142c;
    --brand-dark: #1a1a1a;
    --brand-gray: #666666;
    --soft-bg: #fcfcfc;
    --serif: 'Playfair Display', serif;
  }

  .featured-showcase {
    padding: 120px 20px;
    background: #ffffff; 
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .header-minimal {
    text-align: center;
    margin-bottom: 80px;
  }

  .eyebrow {
    display: block;
    text-transform: uppercase;
    letter-spacing: 5px;
    font-size: 0.7rem;
    font-weight: 700;
    color: var(--brand-red);
    margin-bottom: 15px;
  }

  .title-main {
    font-size: clamp(2rem, 5vw, 2.8rem);
    font-weight: 300;
    color: var(--brand-dark);
    margin-bottom: 25px;
    letter-spacing: 1px;
  }

  .serif-italic {
    font-family: var(--serif);
    font-style: italic;
  }

  .accent-line {
    width: 40px;
    height: 1px;
    background: var(--brand-red);
    margin: 0 auto 25px;
  }

  .description-text {
    max-width: 550px;
    margin: 0 auto;
    font-size: 1.05rem;
    color: var(--brand-gray);
    line-height: 1.6;
    font-weight: 300;
  }

  /* --- GRID --- */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 40px;
    margin-bottom: 80px;
  }

  .footer-actions {
    text-align: center;
  }

  .btn-boutique {
    display: inline-flex;
    align-items: center;
    gap: 15px;
    padding: 18px 45px;
    background: var(--brand-dark); 
    color: #fff;
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    border: 1px solid var(--brand-dark);
  }

  .btn-boutique:hover {
    background: transparent;
    color: var(--brand-dark);
    transform: translateY(-5px);
  }

  /* --- BANNER DE OFERTAS debemos de crear la api tambien --- */
  .offer-banner {
    background: var(--brand-red);
    color: white;
    padding: 10px 0;
    text-align: center;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
  }

  /* --- RESPONSIVE --- */
  @media (max-width: 768px) {
    .featured-showcase {
      padding: 80px 20px;
    }
    
    .title-main {
      font-size: 2rem;
    }

    .products-grid {
      gap: 20px;
    }

    .btn-boutique {
      width: 100%;
      justify-content: center;
    }
  }
</style>